<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.sundialclock.RadarChartView
            android:id="@+id/radar_chart_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:visibility="gone"/>

    <com.example.sundialclock.SundialView
            android:id="@+id/sundial_view"
            android:background="#0af"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/test_click_view1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Hello World!"
            android:layout_gravity="center"
            android:visibility="gone"/>

    <com.example.sundialclock.TestClickView
            android:id="@+id/test_click_view2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Hello World!"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    <Button
            android:id="@+id/btn_test"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="test"
            android:visibility="visible"
            android:layout_gravity="bottom|center_horizontal"/>


</FrameLayout>